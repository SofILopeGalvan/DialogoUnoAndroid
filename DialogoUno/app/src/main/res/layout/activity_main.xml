<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.sofilop.dialogouno.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Toast"
        android:id="@+id/btnToas"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con Toas"
        android:id="@+id/lblToas"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/btnToas"
        android:layout_alignBaseline="@+id/btnToas"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Dialogo"
        android:id="@+id/btnDialogo"
        android:layout_below="@+id/btnToas"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con Fragment"
        android:id="@+id/lblDialogo"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/btnDialogo"
        android:layout_alignBaseline="@+id/btnDialogo"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Fecha"
        android:id="@+id/btnFecha"
        android:layout_below="@+id/btnDialogo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con Fecha"
        android:id="@+id/lblFecha"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/btnFecha"
        android:layout_alignBaseline="@+id/btnFecha"

        />


</RelativeLayout>
